    ### GENERAL FUNCTIONALITY ###

    if (prefix + "help") in message.content or (prefix + "?") in message.content:
      user = message.author
      helpCommandList = "Hi. I'm the Dice Bot. My prefix is " + prefix + ".\nList of Dice Bot Commands:\nrtd, sid, question\nType $[command] ? to get more help on a command!"
      await user.send(helpCommandList)
      await message.add_reaction('👍')

    # Function to roll X times with Y number of specified faces
    if (prefix + 'rtd') in message.content:
      if (prefix + 'rtd ?') in message.content or (prefix + "rtd help") in message.content:
        await message.channel.send(usage) # RTD Help
      elif (prefix + 'rtd') == message.content:
        await message.channel.send("Rolling...")
        roll = random.randint(1,6)
        await message.channel.send('You rolled a ' + str(roll))
      else:
        diceCommand = message.content
        regexCheck = re.match("^\$[a-zA-Z]+ [0-9]+ [0-9]+$", diceCommand)
        isMatch = bool(regexCheck)
        if isMatch:
          splitDiceCommand = diceCommand.split(" ")
          if int(splitDiceCommand[1]) == 1:
            roll = random.randint(1, int(splitDiceCommand[2]))
            await message.channel.send('You rolled a ' + str(roll))
          else:
            dieArr = [] # Define an empty array to store the rolls in
            await message.channel.send("Rolling...")
            for i in range(int(splitDiceCommand[1])):
              roll = random.randint(1, int(splitDiceCommand[2]))
              dieArr.append(roll)
            allDieRolls = ""
            await message.channel.send(splitDiceCommand[1] + " Rolls complete:")
            for i in range(len(dieArr)):
              allDieRolls += "(" + str(dieArr[i]) + ") "
              if len(allDieRolls) > 1000:
                await message.channel.send(allDieRolls) # Send now to avoid 4000 character limit
                allDieRolls = "" # Clear the message
            if allDieRolls != "":
              await message.channel.send(allDieRolls)
            await message.channel.send("Performed " + splitDiceCommand[1] + " rolls with a " + splitDiceCommand[2] + "-sided die.")
        else:
          await message.channel.send(usage) # RTD Help
    
    if (prefix + "question") in message.content or (prefix + "question help") in message.content:
      if (prefix + "question ?") == message.content:
        await message.channel.send("Usage: $question [Enter your yes or no question for me to answer, don't forget the question mark]")
        return
      if "?" not in message.content:
        await message.channel.send("Hmm, either that isn't a question or you forgot a question mark. Try again.")
        return
      response = random.randint(1,10)
      if response == 1:
        await message.channel.send("Yes!")
      elif response == 2:
        await message.channel.send("There's a very good chance.")
      elif response == 3:
        await message.channel.send("Certainly not.")
      elif response == 4:
        await message.channel.send("Potentially.")
      elif response == 5:
        await message.channel.send("I don't know.")
      elif response == 6:
        await message.channel.send("Of course!")
      elif response == 7:
        await message.channel.send("Wow... Of course not! Why would you even ask that?")
      elif response == 8:
        await message.channel.send("There is a chance.")
      elif response == 9:
        await message.channel.send("It's almost certain.")
      elif response == 10:
        await message.channel.send("No!")
      

    if ('gn stev') == message.content or ("Goodnight Steve") == message.content:
        SteveID = '<@224840296158986240>'
        await message.channel.send('Goodnight %s' % SteveID)

    if ('Gaming time') == message.content:
      await message.channel.send("It's gaming time")
      
    if ("give me hacks in val") == message.content:
        await message.channel.send("You now have hacks in Valorant")
    
    if ("THANKS BOT").lower() == message.content.lower() or ("THANK YOU BOT").lower() == message.content.lower():
        user = message.author.id
        await message.channel.send("No worries, <@%s>" % user)

    if message.content.startswith(prefix + 'thumb'):
        channel = message.channel
        await channel.send('Send me that 👍 reaction, mate')

        def check(reaction, user):
            return user == message.author and str(reaction.emoji) == '👍'

        try:
            reaction, user = await client.wait_for('reaction_add', timeout=60.0, check=check)
        except asyncio.TimeoutError:
            await channel.send('👎')
        else:
            await channel.send('👍')